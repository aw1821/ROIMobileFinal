<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ROIMobileFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ROIMobileFinal"
    Shell.FlyoutBehavior="Disabled"
    Title="ROIMobileFinal">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:StaffDirectoryPage}"
        Route="StaffDirectory" />
    <ShellContent Title="Add Staff" 
                  ContentTemplate="{DataTemplate local:AddStaffPage}" 
                  Route="AddStaffPage" />
</Shell>
