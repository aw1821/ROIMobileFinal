<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ROIMobileFinal.AddStaffPage">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Add New Staff" FontSize="24" HorizontalOptions="Center"/>
            <Label Text="Name:" />
            <Entry x:Name="NameEntry" Placeholder="Enter Name"/>
            <Label Text="Email:" />
            <Entry x:Name="EmailEntry" Placeholder="Enter Email"/>
            <Label Text="Mobile:" />
            <Entry x:Name="MobileEntry" Placeholder="Enter Mobile" Keyboard="Numeric" MaxLength="10"/>
            <Label Text="Phone:" />
            <Entry x:Name="PhoneEntry" Placeholder="Enter Phone" Keyboard="Numeric" MaxLength="10"/>
            <Button Text="Save" Clicked="OnSaveClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
